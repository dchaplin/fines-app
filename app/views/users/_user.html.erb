<div class="user-line">
  <%= user.username %>
  <%= "(Admin)" if user.admin %>  
  <span class="is-right-aligned">
    <%= link_to image_tag('edit-icon.png', :size => '16x16'), edit_user_path(user) %>
    <%= link_to image_tag('delete-icon.png', :size => '16x16'), user, method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
</div>
