<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="row form-row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :username %>:
        <%= f.text_field :username, size: 40 %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-6">      
      <div class="field">
        <%= f.label :password, 'Password' %>:
        <%= f.password_field :password, size: 40 %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :password_confirmation, 'Confirm' %>:
        <%= f.password_field :password_confirmation, size: 40 %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-6">
      <div class="field">
        <% if is_admin? %>
          <%= f.label :admin, 'Admin' %>:
          <%= f.check_box :admin %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-11">
      <div class="actions is-right-aligned">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>




