<%= form_for(@fine) do |f| %>
  <% if @fine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fine.errors.count, "error") %> prohibited this fine from being saved:</h2>

      <ul>
      <% @fine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row form-row">
    <div class="col-md-6">  
      <div class="field">
        <%= f.label :offender_id %><br>
        <%= f.collection_select :offender_id, @users, :id, :username , include_blank: true %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :amount %><br>
        R<%= Fine::FINE_AMOUNT %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => "text-area" %>
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-12">
      <div class="field">
        <%= f.label :status %><br>
        Pending
      </div>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :date %><br>
        <%= Date.today %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field">
        <%= f.label :proposer_id %><br>
        <%= current_user.username %>
      </div>
    </div>
  </div>
    <div class="col-md-12">
      <div class="actions is-right-aligned">
        <%= f.submit %>
     </div>
    </div>
<% end %>
